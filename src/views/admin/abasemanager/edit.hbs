<div class="col-12">
  <div class="card">
    <div class="card-body">
      <form action="/admin/{{pageKey}}/save" method="post" class="form-validate{{#if isFormValidCustom}} fv-cc{{/if}}" 
        data-btn-disable="btn-ref-disable"{{#if isFormFile}} enctype="multipart/form-data"{{/if}}>
        <input type="hidden" name="id" value="{{item.id}}" />

        {{#each editFieldList}}
          <div class="form-group">
            <label for="{{this.key}}">
              {{#if this.title}}{{this.title}}{{else}}{{this.key}}{{/if}}
              {{#if this.required}} <code>*</code>{{/if}}
            </label>

            {{#if (ifEquals this.type 'textarea')}}
              <textarea name="{{this.key}}" class="form-control" id="{{this.key}}"
                placeholder="{{this.title}}"{{#if this.required}} required{{/if}} >{{callPropertyStr ../item this.key}}</textarea>

            {{else if (ifEquals this.type 'select')}}
              <select name="{{this.key}}" class="form-control"{{#if this.required}} required{{/if}}>
                {{#each this.options}}
                  <option{{#if (ifEquals (callPropertyStr ../../item ../this.key) this)}} selected{{/if}}
                    value="{{this}}">{{@key}}</option>
                {{/each}}
              </select>

            {{else if (ifEquals this.type 'date')}}
              {{!-- <div class="input-group date"> --}}
                <input type="text" class="form-control {{#if this.time}}datetimepicker{{else}}datepicker{{/if}}" name="{{this.key}}"
                  value="{{callFnProperty ../item 'getDate' this.key}}"{{#if this.required}} required{{/if}} />
                {{!-- <div class="input-group-append">
                  <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                </div>
              </div> --}}

            {{else if (ifEquals this.type 'image')}}
              <input type="file" class="form-control" name="{{this.key}}" accept="image/png,image/jpg,image/jpeg"
                value="{{callPropertyStr ../item this.key}}" id="{{this.key}}" 
                aria-describedby="{{this.key}}" placeholder="{{this.title}}"
                {{#if this.required}}{{#unless (callPropertyStr ../item this.key)}} required{{/unless}}{{/if}}
                data-rules-image="jpg|jpeg|png"
                />
              <div class="img-preview" data-ref-id="{{this.key}}">
                {{#if (callPropertyStr ../item this.key)}}
                  <img src="{{callPropertyStr ../item this.key}}" />
                {{/if}}
              </div>

            {{else}}
              <input type="{{#if this.type}}{{this.type}}{{else}}text{{/if}}" class="form-control" name="{{this.key}}" 
                value="{{callPropertyStr ../item this.key}}" id="{{this.key}}" 
                aria-describedby="{{this.key}}" placeholder="{{this.title}}"{{#if this.required}} required{{/if}} />
            {{/if}}

          </div>
        {{/each}}

        <button type="submit" class="btn btn-primary btn-ref-disable" disabled>Submit</button>
      </form>
      {{!-- delete item --}}
      {{#if item.id}}
        <div class="form-del-item float-right">
        <form action="/admin/{{pageKey}}/delete/{{item.id}}" method="post" class="form-del" data-btn-disable="btn-ref-disable">
          <button type="submit" class="btn btn-danger btn-ref-disable" disabled>Delete</button>
        </form>
        </div>
      {{/if}}
      {{!-- //end end delete item --}}
    </div>
  </div>
</div>
